{
  "version": 2,
  "builds": [
    {
      "src": "blogging website - frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "blogging website - frontend/dist/$1"
    }
  ],
  "installCommand": "npm run install-all && npm run build"
}